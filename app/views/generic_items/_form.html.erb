<%= form_for(@generic_item, :html => { :multipart => true }) do |f| %>
  <div class="field">
    名称: <%= f.text_field :name %>
  </div>
  <div class="field">
    一段描述文字： <br/>
    <%= f.text_area :description, :size => "40 x 4" %>
  </div>
  <div class="field">
    分类： <%= f.number_field :category_id %>
  </div>
  <div class="field">
    UUID(唯一性的标识) <%= f.text_field :uuid %>
  </div>
  <div class="field">
    适宜年龄： <%= f.text_field :child_age_scope %>岁 (例如： 10~14岁）
  </div>
  <div class="field">
    初始化的分数（默认是0）:
    <%= f.text_field :scores %>
  </div>
  <div class="field">
    面相对象(男孩/女孩/均可)：
    <%= f.text_field :customer_gender %>
  </div>
  <div class="field">
    小贴士：<br/>
    <%= f.text_area :tips, :size => "40x4" %>
  </div>
  <br/>
  <br/>
  <%= render :partial => "layouts/submit_and_cancel" %>
<% end %>
