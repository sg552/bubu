<%= form_for(@comment) do |f| %>
  <div class="field">
    标题： <%= f.text_field :title %>
  </div>
  <div class="field">
    正文： <br/>
    <%= f.text_area :content, :size => "40x 4" %>
  </div>
  <%= f.hidden_field :generic_item_id %>
  <%= f.hidden_field :user_id %>
  <%= render :partial => "layouts/submit_and_cancel" %>
<% end %>
