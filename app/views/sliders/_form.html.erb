<%= form_for(@slider, :html => {:multipart => true}) do |f| %>
  <div class="field">
    标题: <br/>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    长文字： <br/>
    <%= f.text_area :content, :size => "60x3" %>
  </div>
  <div class="field">
    目标链接: <br/>
    <%= f.text_area :target_url, :size => "60x3" %>
  </div>
  <div class="field">
    图片：<%= file_field_tag "image[itself]" %>
  </div>
  <%= render :partial => "layouts/submit_and_cancel" %>
<% end %>
